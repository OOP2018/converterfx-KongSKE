<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="converter.ConverterController">
   <children>
      <FlowPane prefHeight="77.0" prefWidth="549.0">
         <children>
            <TextField fx:id="textfield1" onAction="#handleConvert" prefHeight="25.0" prefWidth="104.0">
               <FlowPane.margin>
                  <Insets left="5.0" />
               </FlowPane.margin></TextField>
            <ComboBox fx:id="combobox1" prefHeight="25.0" prefWidth="98.0">
               <FlowPane.margin>
                  <Insets left="5.0" right="5.0" />
               </FlowPane.margin>
            </ComboBox>
            <TextField fx:id="textfield2" onAction="#handleConvert" onDragEntered="#handleConvert" prefHeight="25.0" prefWidth="107.0" />
            <ComboBox fx:id="combobox2" prefHeight="25.0" prefWidth="98.0">
               <FlowPane.margin>
                  <Insets left="5.0" right="5.0" />
               </FlowPane.margin>
            </ComboBox>
            <Button fx:id="button1" mnemonicParsing="false" onAction="#handleConvert" text="Convert">
               <FlowPane.margin>
                  <Insets right="5.0" />
               </FlowPane.margin>
            </Button>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#handleClear" text="Clear">
               <FlowPane.margin>
                  <Insets right="5.0" />
               </FlowPane.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
         </padding>
      </FlowPane>
   </children>
</AnchorPane>
